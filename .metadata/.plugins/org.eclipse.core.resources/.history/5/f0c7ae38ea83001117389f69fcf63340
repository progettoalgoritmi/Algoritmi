package xmppthreadedcommander;

import java.io.BufferedReader;
import java.io.IOException;

public class StreamReaderThread implements Runnable {

	private BufferedReader in = null;
	private char[] buffer = null;
	private int bufsize;
	private boolean end;
	private String lastChallenge;
	
	public StreamReaderThread(BufferedReader in) {
		this.in = in;
		this.buffer = new char[10000];
		this.bufsize = 10000;
		this.end = false;
		this.lastChallenge = null;
	}
	
	public StreamReaderThread(BufferedReader in, int size) {
		this.in = in;
		this.buffer = new char[size];
		this.bufsize = size;
		this.end = false;
		this.lastChallenge = null;
	}
	
	
	public boolean isEnded() {
		return this.end;
	}
	
	public char[] getBuffer() {
		return this.buffer;
	}
	
	private String takeChallenge() throws IOException, InterruptedException {
		if ((String.valueOf(buffer)).indexOf("</challenge>") != -1) {
			StringBuilder sb = new StringBuilder();
			int j = 0;
			while (buffer[j] != '<') {
				sb.append(buffer[j]);
				j++;
			}
			String challenge = new String(sb.toString());
			return challenge;
		}
		return null;
	}
	
	public String getChallenge() {
		return this.lastChallenge;
	}
	
	@Override
	public void run() {
		int i = 0;
		while(!end) {
			char buff;
			try {
				buff = (char) in.read();
				if (buff == 65535) end = true;
				else if (buff != '>') {
					buffer[i] = buff;
					i = (i + 1)%bufsize;
					System.out.print(buff);
				}
				else {
					
					buffer[i] = buff;
					i = (i + 1)%bufsize;
					System.out.println(buff);
				}
			} catch (IOException e) {}
		}
	}
}
