package xmppcommander;

import java.io.BufferedReader;
import java.io.IOException;

public class StreamReaderThread implements Runnable {

	BufferedReader in = null;
	
	public StreamReaderThread(BufferedReader in) {
		this.in = in;
	}
	
	@Override
	public void run() {
		while(true) {
			int buff;
			try {
				buff = in.read();
			} catch (IOException e) {}
		}
	}

}
