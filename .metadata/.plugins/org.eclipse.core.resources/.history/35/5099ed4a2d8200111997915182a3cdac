package xmppcommander;

import java.io.IOException;

public class PrintSocketBuffer implements Runnable {
	public PrintSocketBuffer() {}
	
	public void run() {
		while(true) {
			try {
				
					for (int j = 0; j < XMPPCommander.c.length; j++) XMPPCommander.c[j] = '\0';
					XMPPCommander.in.read(XMPPCommander.c);
					if (String.valueOf(XMPPCommander.c).indexOf("</stream:stream>") != -1) break;
					System.err.print("Server: ");
					for (int j = 0; j < XMPPCommander.c.length; j++) {
						System.err.print(XMPPCommander.c[j]);
					}
					System.err.println();
				
			} catch (IOException e) {}
		}
	}
}